<section class="container">
  <div class="d-flex align-items-center mb-3">
    <h1><%= gettext("Edit %{name}", name: "#{@person.firstname} #{@person.lastname} (#{@person.identifier})") %></h1>
    <%= link gettext("Back"), to: Routes.person_path(@conn, :index), class: "ml-auto" %>
  </div>
  <%= render(
    "form.html",
    Map.put(
      assigns,
      :action,
      Routes.person_path(@conn, :update, @person)
    )
  ) %>
</section>