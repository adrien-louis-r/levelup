<div class="row">
  <%= form_for @changeset, @action, [class: "col-md-6 offset-md-3"], fn f -> %>
    <%= if @changeset.action do %>
      <div class="alert alert-danger">
        Oops, something went wrong! Please check the errors below.
      </div>
    <% end %>

    <%= bt_input f, :name %>

    <%= submit "Save", class: "btn btn-primary" %>
  <% end %>
