<h2>Login Page</h2>

<%= form_for @changeset, @action, fn f -> %>

  <div>
    <%= label f, :username %>
    <%= text_input f, :username %>
    <%= error_tag f, :username %>
  </div>

  <div>
    <%= label f, :password %>
    <%= password_input f, :password %>
    <%= error_tag f, :password %>
  </div>

  <div>
    <%= submit "Submit" %>
  </div>
<% end %>